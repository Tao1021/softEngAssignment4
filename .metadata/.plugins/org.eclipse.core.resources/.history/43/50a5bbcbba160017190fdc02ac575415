from flask import Flask, render_template, url_for, request, session, flash, g
from functools import wraps
import sys
import dbconnect

#create appl object
app = Flask(__name__)

@app.route('/')
def hello():
    g.db = dbconnect.connection()
    c = g.db.cursor()
    cur = g.db.execute('select num, last_update, status, total_Bikes, avail_bikes, availAndOp_bikes from Dynamic') 
    dbdata = []
    rows = c.fetchall()
    
    for eachRow in rows:
        dbdata.append(dict(num=eachRow[0], last_update=eachRow[1], status=eachRow[2], total_Bikes=eachRow[3], avail_bikes=eachRow[4], availAndOp_bikes=eachRow[5]))
        c.close()
    g.db.close()
    return render_template('helloDynamic.html', dbdata=dbdata)

if __name__ == '__main__':
        app.run(debug=True)
