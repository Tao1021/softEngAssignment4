from flask import Flask, render_template, url_for, request, session, flash, g, jsonify
from functools import wraps
import sys
import dbconnect

#create appl object
app = Flask(__name__)

@app.route('/')
def hello():
    g.db = dbconnect.connection()
    c = g.db.cursor()
    cur = c.execute('select timeStamp, weatherID, temp, descp, icons from weather') 
    dbdata = []
    rows = c.fetchall()
    for row in rows:
            dbdata.append(dict(row))
    
    
    c.close()
    g.db.close()
    
    return render_template('helloWeather.html', dbdata=dbdata)

@app.teardown_appcontext
def close_connection(exception):
    db = getattr(g, '_database', None)
    if db is not None:
        db.close() 

if __name__ == '__main__':
        app.run(debug=True)
